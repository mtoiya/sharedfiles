# 実行環境のタイプを識別するのに使用する変数
UNAME=`uname`



[[ -s `which apt-cache` ]] && alias a='apt-cache'

alias backup='rsync -av --delete'

if [[ "$UNAME" == "Darwin" ]]
then
  alias b='brew'
  alias bh='brew home'
  alias bi='brew info'
  alias bl='brew list'
  alias bo='brew outdated'
  alias bs='brew search'
fi

alias c='cat'
alias d='dirs -v'
alias df='df -h'

if [[ "$UNAME" == "Darwin" ]]
then
  alias dke='disk_action eject'
  alias dkl='diskutil list'
  alias dkm='disk_action mount'
  alias dkmd='disk_action mountDisk'
  alias dkn='rename_disk'
  alias dkr='remount_disk'
  alias dku='disk_action unmount'
  alias dkud='disk_action unmountDisk'
fi

alias du='du -h'
alias dun='du / > /dev/null'
alias e='emacsclient -nw'
alias E='emacsclient -n'
alias f='find'
alias g='git'
alias ga='git add'
alias gb='git branch'
alias gi='git commit'
alias go='git checkout'
alias gd='git diff'
alias gh='git help'
alias gl='git log'
alias gl1='git log --oneline'
alias gm='git merge'
alias gn='git svn'
alias gr='grep'
alias gs='git status'
alias gt='git tag'

if [[ "$UNAME" == "Darwin" ]]
then
  alias gba=getbootarch
  alias getbootarch='systemsetup -getkernelbootarchitecturesetting'
fi

alias h='history'
alias ht='htop'
alias j='pushd'
alias j.='pushd ..'
alias j..='pushd ../..'
alias j...='pushd ../../..'
alias j....='pushd ../../../..'
alias j.....='pushd ../../../../..'
alias j......='pushd ../../../../../..'
alias j.......='pushd ../../../../../../..'
alias j........='pushd ../../../../../../../..'
alias j.........='pushd ../../../../../../../../..'
alias j..........='pushd ../../../../../../../../../..'
alias J='popd'
alias jb=jobs
alias l='ls -l'
alias la='ls -lA'
alias ln2hot='symlink_to_hotdir'
alias lr='ls -lR'
alias lra='ls -lRA'

if [[ "$UNAME" == "Darwin" ]]
then
  alias ls='ls -Gh'
elif [[ "$UNAME" == "Linux" ]]
then
  alias ls='ls -h --color'
fi

alias lsa='ls -A'
alias lt='tree'
alias lt1='tree -L 1'
alias lt2='tree -L 2'
alias lt3='tree -L 3'
alias lt4='tree -L 4'
alias lt5='tree -L 5'
alias lt6='tree -L 6'
alias lt7='tree -L 7'
alias lt8='tree -L 8'
alias lt9='tree -L 9'
alias lt10='tree -L 10'
alias lta='tree -a'
alias L='ls -Ll'
alias Ls='ls -L'
alias La='ls -LlA'
alias m='less'

if [[ "$UNAME" == "Darwin" ]]
then
  alias mdf='mdfind -onlyin .'
fi

alias mecp='secure_copy_to_ssh_client'
alias mk='make'
alias mkn='make -n'
alias mksh='make_shell_script'
alias mt=mount
alias n='nkf'
alias nj='ninja'

if [[ "$UNAME" == "Darwin" ]]
then
  alias o='open'
fi

alias p='pwd'
alias pp='pwd -P'

if [[ "$UNAME" == "Darwin" ]]
then
  alias print_firmware_abi='ioreg -l -p IODeviceTree | grep firmware-abi | grep -o -E "EFI[0-9]{2,2}"'
fi

if [[ "$UNAME" == "Darwin" || "$UNAME" == "Linux" ]]
then
  alias ps='ps -U$USERNAME'
fi

if [[ "$UNAME" == "Darwin" ]]
then
  alias pt='port'
  alias pti='port info'
  alias ptl='port installed'
  alias pto='port outdated'
  alias pts='port search'
fi

alias q='exit'
alias realias="${EDITOR} ~/.sh_aliases ; source ~/.sh_aliases"
alias refunction="${EDITOR} ~/.sh_functions ; source ~/.sh_functions"
alias rr='rm -R'
alias rrf='rm -Rf'
alias s='svn'
alias sd='svn diff'

if [[ "$UNAME" == "Darwin" ]]
then
  alias setbootarch='sudo systemsetup -setkernelbootarchitecture'
fi

alias si='svn info'
alias sl='svn log -l5'
alias sl1='svn log -l1'
alias sl2='svn log -l2'
alias sl3='svn log -l3'
alias sl4='svn log -l4'
alias sl5='svn log -l5'
alias sl6='svn log -l6'
alias sl7='svn log -l7'
alias sl8='svn log -l8'
alias sl9='svn log -l9'
alias sl10='svn log -l10'
alias sl20='svn log -l20'
alias sl30='svn log -l30'
alias sl40='svn log -l40'
alias sl50='svn log -l50'
alias ss='svn status'
alias srev='svn revert'
alias srr='svn revert -R'
alias st='stat'
alias stx='stat -x'
alias t='top'
alias umt=umount

if [[ "$UNAME" == "Darwin" ]]
then
  macvim="/Applications/MacVim.app/Contents/MacOS/Vim"
  if [[ -e "$macvim" ]]
  then
    alias vi="$macvim"
  fi
fi

alias vr='vi -R'
alias x='xargs'

if [[ "$UNAME" == "Darwin" ]]
then
  alias xa='xattr'
  alias xb='xcodebuild'
  alias xc='xcodebuild clean'
  alias xl='xcodebuild -list'
fi

#alias z='zip -y -r'
alias uz='unzip'
alias 2unix='nkf -w -Lu --overwrite'
alias 2win='nkf -s -Lw --overwrite'
alias 2smart='nkf -w -Lw --overwrite'
alias 7='7z a -tzip'

# パッケージ管理系コマンド
alias 0i='apt-cache show'
alias 0s='apt-cache search'

# for Smart
if [[ "$UNAME" == "Darwin" ]]
then
  alias s-killall-agents='killall FlamingoMCConverter FlamingoMCBurner FlamingoQTConverter'
fi
